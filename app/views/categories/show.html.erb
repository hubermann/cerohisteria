<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @category.name %>
</p>

<p>
  <b>Slug:</b>
  <%= @category.slug %>
</p>

<p>
  <b>Avatar:</b>
<img alt="avatar" src="data:image;base64,<%= @category.avatar %>" width="150" />
</p>

<% if admin? %>
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
<% end %>