<h3>Nuevo comentario</h3>
<p><%= link_to "Regresar", post_path(@parent), :class => "link_gray" %></p>
<%= form_for [@parent, @comment] do |f| %>
<%= render "shared/form_errors", :object => @comment %>
  <p>
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </p>
<p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p><%= f.button 'Enviar comentario' %></p>
<% end %>