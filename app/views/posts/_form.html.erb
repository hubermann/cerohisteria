<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
  <%= select("post", "category_id", Category.all.collect {|p| [ p.name, p.id ] }) %>
  </div>
  <div class="field">
    <%= f.label :author_id %><br />
	<%= select("post", "author_id", Author.all.collect {|p| [ p.nickname, p.id ] }) %>
  </div>
  <div class="field">
    <%= f.label :mainimg %><br />
    <%= f.number_field :mainimg %>
  </div>
  <div class="field">
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </div>
<div class="field">
    <%= f.label :recomended %><br />
    <%= f.check_box :recomended %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
